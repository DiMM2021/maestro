<div class="items">
  <div class="container">
		<div class="items_show">
			<h2 class="head_h2"><%= @item.name %></h2>
			<hr>
				<div class="row justify-content-center">
					<div class="col-xl-5 text-center">
						<figure class="block-4-image">
							<%= image_tag @item.image, class: 'img_item' %>
						</figure>
					</div>
					<div class="col-xl-5">
						<div class="items_padding">
							<p class= "items_descr">
								<span>Категория:</span> <span><%= @item.category.title %></span>
							</p>
							<div class="line"></div>
							<p class= "items_descr">
								<span>Размеры:</span> <span> <%= @item.size %></span>
							</p>
							<div class="line"></div>
							<p class= "items_descr">
								<span>Цена:</span> <span> <%= @item.price %> тенге </span>
							</p>
							<div class="line"></div>
							<div class="accordion accordion-flush" id="accordionFlushExample">
								<div class="accordion-item">
									<h2 class="accordion-header" id="flush-headingOne">
										<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
											Характеристика
										</button>
									</h2>
									<div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
										<div class="accordion-body"><%= @item.description %></div>
									</div>
								</div>
							</div>
							<div class="line"></div>

							<%= button_to 'Добавить в корзину', line_items_path(item_id: @item), class:"btn btn-danger" %>
							</div>
					</div>
				</div>
			</div>
		</div>
		
  </div>
</div>